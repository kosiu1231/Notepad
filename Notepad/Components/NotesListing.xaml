<UserControl x:Class="Notepad.Components.NotesListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notepad.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListView ItemsSource="{Binding blabla}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border Padding="5 2">
                    <StackPanel Background="White">
                        <TextBlock Style="{StaticResource cardName}" Text="{Binding Note.Title}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource cardText}" Text="{Binding Note.DateTime}" />
                            <Border Style="{StaticResource cardTagBorder}">
                                <TextBlock Style="{StaticResource cardTagText}" Text="{Binding jakistagid}" />
                            </Border>
                        </StackPanel>
                        <TextBlock Style="{StaticResource cardText}" Text="{Binding Content}" />
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
